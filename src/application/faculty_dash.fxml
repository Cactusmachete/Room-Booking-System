<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="574.0" prefWidth="816.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.facultyController">
   <children>
      <TabPane prefHeight="574.0" prefWidth="816.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Booked Rooms">
               <content>
                  <AnchorPane>
                     <children>
                        <AnchorPane prefHeight="372.0" prefWidth="673.0">
                           <children>
                              <TableView fx:id="bookedTable" prefHeight="536.0" prefWidth="816.0">
                              <placeholder>
        						<Label text="You have no booked rooms!" />
    						  </placeholder>
                                <columns>
                                  <TableColumn fx:id="bookedRoom" prefWidth="223.0" text="Room Booked" />
                                  <TableColumn fx:id="bookedCap" minWidth="6.0" prefWidth="249.0" text="Capacity" />
                                  <TableColumn fx:id="bookedSlot" minWidth="0.0" prefWidth="195.0" text="Slot" />
                                  <TableColumn fx:id="bookedCancel" prefWidth="148.0" text="Cancellation" />
                                </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
          <Tab text="Available Rooms">
               <content>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <AnchorPane layoutY="34.0" prefHeight="501.0" prefWidth="816.0">
                         <children>
                              <TableView fx:id="availTable" layoutY="19.0" prefHeight="477.0" prefWidth="816.0">
                              	<placeholder>
        							<Label text="There are no available rooms!" />
    						  	</placeholder>
                                <columns>
                                  <TableColumn fx:id="availRoomNum" prefWidth="192.0" text="Room Number" />
                                  <TableColumn fx:id="availCap" prefWidth="151.0" text="Capacity" />
                                  <TableColumn fx:id="availSlot" prefWidth="327.0" text="Available Slots" />
                                    <TableColumn fx:id="availBook" prefWidth="145.0" text="Column X" />
                                </columns>
                              </TableView>
                           </children>
                          </AnchorPane>
                        <Label layoutX="52.0" layoutY="19.0" prefHeight="21.0" prefWidth="196.0" text="Check Availability for    Date:" />
                        <TextField fx:id="availDate" layoutX="253.0" layoutY="11.0" promptText="dd/mm/yyyy" />
                        <Button fx:id="availGo" layoutX="462.0" layoutY="11.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="50.0" text="Go" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>

        </tabs>
      </TabPane>
      <Button layoutX="737.0" layoutY="4.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="76.0" text="Log out" />
   </children>
</AnchorPane>
